local player = game:GetService("Players").LocalPlayer
local TweenService = game:GetService("TweenService")

local gui = Instance.new("ScreenGui")
gui.Name = "LoadingGUI"
gui.Parent = game:GetService("CoreGui")
gui.DisplayOrder = 9999
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 300)
mainFrame.Position = UDim2.new(0.5, -250, 0, -350)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.ClipsDescendants = true
mainFrame.Parent = gui

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 0, 0)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(80, 80, 80))
})
gradient.Rotation = 90
gradient.Parent = mainFrame

local progressBarBack = Instance.new("Frame")
progressBarBack.Name = "ProgressBarBack"
progressBarBack.Size = UDim2.new(0, 350, 0, 20)
progressBarBack.Position = UDim2.new(0, 75, 1, -60)
progressBarBack.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
progressBarBack.BorderSizePixel = 0
progressBarBack.ZIndex = 2
progressBarBack.Parent = mainFrame

local progressBar = Instance.new("Frame")
progressBar.Name = "ProgressBar"
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.Position = UDim2.new(0, 0, 0, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
progressBar.BorderSizePixel = 0
progressBar.ZIndex = 3
progressBar.Parent = progressBarBack

local menuText = Instance.new("TextLabel")
menuText.Size = UDim2.new(0, 100, 0, 20)
menuText.Position = UDim2.new(1, -110, 0, 10)
menuText.Text = "MENU MOD"
menuText.TextColor3 = Color3.fromRGB(200, 200, 200)
menuText.TextXAlignment = Enum.TextXAlignment.Right
menuText.BackgroundTransparency = 1
menuText.Font = Enum.Font.GothamBold
menuText.TextSize = 14
menuText.Parent = mainFrame

local creditText = Instance.new("TextLabel")
creditText.Size = UDim2.new(0, 120, 0, 20)
creditText.Position = UDim2.new(1, -130, 1, -30)
creditText.Text = "By salli_system"
creditText.TextColor3 = Color3.fromRGB(150, 150, 150)
creditText.TextXAlignment = Enum.TextXAlignment.Right
creditText.BackgroundTransparency = 1
creditText.Font = Enum.Font.Gotham
creditText.TextSize = 12
creditText.Parent = mainFrame

local welcomeText = Instance.new("TextLabel")
welcomeText.Name = "WelcomeText"
welcomeText.Size = UDim2.new(1, -40, 0, 50)
welcomeText.Position = UDim2.new(0, 20, 0.5, -25)
welcomeText.Text = "Приветствуем, " .. player.DisplayName .. "!"
welcomeText.TextColor3 = Color3.fromRGB(255, 255, 255)
welcomeText.TextXAlignment = Enum.TextXAlignment.Center
welcomeText.BackgroundTransparency = 1
welcomeText.Font = Enum.Font.GothamBold
welcomeText.TextSize = 24
welcomeText.Visible = false
welcomeText.Parent = mainFrame

local function tween(obj, props, duration, easingStyle, easingDirection)
    local tweenInfo = TweenInfo.new(duration, easingStyle or Enum.EasingStyle.Quad, easingDirection or Enum.EasingDirection.Out)
    local tween = TweenService:Create(obj, tweenInfo, props)
    tween:Play()
    return tween
end

local function initialAnimation()
    tween(mainFrame, {
        Position = UDim2.new(0.5, -250, 0.5, -150)
    }, 1.2, Enum.EasingStyle.Bounce)
    
    for i = 1, 100 do
        progressBar.Size = UDim2.new(i/100, 0, 1, 0)
        task.wait(0.03)
    end
end

local function fullscreenAnimation()
    tween(mainFrame, {
        Size = UDim2.new(1, 0, 1, 0),
        Position = UDim2.new(0, 0, 0, 0)
    }, 0.8, Enum.EasingStyle.Quint)
    
    tween(progressBarBack, {
        Size = UDim2.new(0.7, 0, 0, 30),
        Position = UDim2.new(0.15, 0, 0.85, 0)
    }, 0.5)
    
    tween(menuText, {
        Position = UDim2.new(1, -20, 0, 20),
        TextSize = 18
    }, 0.5)
    
    tween(creditText, {
        Position = UDim2.new(1, -20, 1, -30),
        TextSize = 16
    }, 0.5)
    
    welcomeText.Visible = true
    progressBar.Size = UDim2.new(0, 0, 1, 0)
    tween(progressBar, {
        Size = UDim2.new(1, 0, 1, 0)
    }, 1.5)
    
    return 1.5
end

local function hideAnimation()
    welcomeText.Visible = false
    
    tween(mainFrame, {
        Size = UDim2.new(0, 100, 0, 60),
        Position = UDim2.new(0.5, -50, 0.5, -12.5)
    }, 0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In).Completed:Wait()
    
    tween(mainFrame, {
        Position = UDim2.new(0.5, -50, 0, -100)
    }, 0.8).Completed:Wait()
    
    gui:Destroy()
end

local function main()
    initialAnimation()
    local waitTime = fullscreenAnimation()
    task.wait(waitTime)
    
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/serezanet2/serezanet2-GIT-SALLI/refs/heads/main/git-salli.lua"))()
    end)
    
    if not success then
        warn("Ошибка загрузки скрипта:", err)
    end
    
    hideAnimation()
end

main()
