CreditText.Size = UDim2.new(0, 120, 0, 20)
CreditText.Position = UDim2.new(1, -130, 1, -30)
CreditText.Text = "By salli_system"
CreditText.TextColor3 = Color3.fromRGB(150, 150, 150)
