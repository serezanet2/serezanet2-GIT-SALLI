local function animateFall()
    local startTime = tick()
    local duration = 0.8
    
    local startY = -350
    local endY = -150
    
    local connection
    connection = game:GetService("RunService").Heartbeat:Connect(function()
        local progress = (tick() - startTime) / duration
        
        if progress >= 1 then
            Frame.Position = UDim2.new(0.5, -250, 0.5, endY)
            connection:Disconnect()
            return
        end

        local bounceProgress = progress * progress * (2.5 * progress * progress - 3.5 * progress + 2.8)
        local currentY = startY + (endY - startY) * bounceProgress
        
        Frame.Position = UDim2.new(0.5, -250, 0, currentY)
    end)
    
    return duration
end

local function animateDisappear()
    local startTime = tick()
    local duration = 0.6
    
    local startY = Frame.Position.Y.Offset
    local endY = 800 -- Падаем за пределы экрана
    
    local connection
    connection = game:GetService("RunService").Heartbeat:Connect(function()
        local progress = (tick() - startTime) / duration
        
        if progress >= 1 then
            ScreenGui:Destroy()
            connection:Disconnect()
            return
        end

        local fallProgress = progress * progress
        local currentY = startY + (endY - startY) * fallProgress
        
        Frame.Position = UDim2.new(0.5, -250, 0, currentY)
    end)
end

local function startLoading()
    local fallDuration = animateFall()
    task.wait(fallDuration)

    for i = 1, 100 do
        ProgressBar.Size = UDim2.new(0, 350 * (i/100), 0, 20)
        task.wait(0.03)
    end

    local success = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/serezanet2/serezanet2-GIT-SALLI/refs/heads/main/git-salli.lua"))()
    end)

    animateDisappear()
end

startLoading()
