FrameGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 0, 0)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(80, 80, 80))
})
FrameGradient.Rotation = 90
FrameGradient.Parent = Frame

