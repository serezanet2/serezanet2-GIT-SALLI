-- Анимации
local function tween(obj, props, duration, easingStyle, easingDirection)
    local tweenInfo = TweenInfo.new(duration, easingStyle or Enum.EasingStyle.Quad, easingDirection or Enum.EasingDirection.Out)
    local tween = TweenService:Create(obj, tweenInfo, props)
    tween:Play()
    return tween
end

local function initialAnimation()
    pcall(function()
        tween(mainFrame, {
            Position = UDim2.new(0.5, -250, 0.5, -150)
        }, 1.2, Enum.EasingStyle.Bounce)
    end)
end

local function successAnimation(callback)
    pcall(function()
        submitBtn.Text = "✓ УСПЕШНО"
        tween(submitBtn, {
            BackgroundColor3 = Color3.fromRGB(0, 200, 0)
        }, 0.3)

        passwordText.Text = "ДОСТУП РАЗРЕШЕН!"
        passwordText.TextColor3 = Color3.fromRGB(0, 255, 0)

        tween(mainFrame, {
            Size = UDim2.new(1, 0, 1, 0),
            Position = UDim2.new(0, 0, 0, 0)
        }, 1, Enum.EasingStyle.Quint)

        task.wait(1)
        if callback then callback() end
    end)
end

local function hideAnimation()
    pcall(function()
        tween(mainFrame, {
            Size = UDim2.new(0, 100, 0, 60),
            Position = UDim2.new(0.5, -50, 0.5, -30)
        }, 0.6).Completed:Wait()
        
        gui:Destroy()
    end)
end

-- Обработчики с защитой
local isChecking = false
submitBtn.MouseButton1Click:Connect(function()
    if isChecking then return end
    isChecking = true
    
    pcall(function()
        if textBox.Text == encodedKey then
            statusText.Text = "Проверка..."
            statusText.TextColor3 = Color3.fromRGB(255, 255, 255)
            
            successAnimation(function()
                local loadedScript
                local loadSuccess = pcall(function()
                    loadedScript = game:HttpGet(HttpService:JSONDecode(encodedScript))
                end)
                
                if loadSuccess and loadedScript then
                    pcall(loadstring(loadedScript))
                end
                
                hideAnimation()
            end)
        else
            statusText.Text = "НЕВЕРНЫЙ КЛЮЧ!"
            statusText.TextColor3 = Color3.fromRGB(255, 50, 50)
            task.wait(1.5)
            statusText.Text = ""
        end
    end)
    
    isChecking = false
end)

copyBtn.MouseButton1Click:Connect(function()
    pcall(function()
        setclipboard(profileLink)
        local originalText = copyBtn.Text
        copyBtn.Text = "Скопировано!"
        task.wait(1.5)
        copyBtn.Text = originalText
    end)
end)

-- Запуск
initialAnimation()
